{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "lib": [
        "es6",
        "dom"
      ],
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./"
    },
    "exclude": ["node_modules"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
  }